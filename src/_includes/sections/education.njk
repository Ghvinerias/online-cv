{% if data.education %}
<section class="section">
  <div class="section-header">
    <h2>{{ data.education.title }}</h2>
  </div>
  <div class="stack">
    {% for edu in data.education.info %}
    <article class="card small">
      <div class="card-header">
        <div>
          <h3>{{ edu.degree }}</h3>
          <div class="muted">{{ edu.university }}</div>
        </div>
        <span class="pill">{{ edu.time }}</span>
      </div>
      {% if edu.details %}
      <div class="card-body">{{ edu.details | markdown }}</div>
      {% endif %}
    </article>
    {% endfor %}
  </div>
</section>
{% endif %}
