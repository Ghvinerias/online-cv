---
layout: base.njk
pageClass: print
lang: ka
---
{% set resume = resume_ka %}

<div class="print-wrapper">
  <header class="print-header">
    <div>
      <h1>{{ resume.sidebar.name }}</h1>
      <p>{{ resume.sidebar.tagline }}</p>
    </div>
    <div class="print-contact">
      <div>{{ resume.sidebar.email }}</div>
      <div>{{ resume.sidebar.phone }}</div>
      <div>github.com/{{ resume.sidebar.github }}</div>
      <div>linkedin.com/in/{{ resume.sidebar.linkedin }}</div>
    </div>
  </header>

  <section>
    <h2>პროფილი</h2>
    <p>{{ resume["career-profile"].summary | striptags }}</p>
  </section>

  {% if resume.experiences %}
  <section>
    <h2>{{ resume.experiences.title }}</h2>
    <div class="timeline">
      {% for exp in resume.experiences.info %}
      <div class="timeline-item">
        <div class="timeline-meta">
          <strong>{{ exp.role }}</strong> — {{ exp.company }}
          <span class="timeline-time">{{ exp.time }}</span>
        </div>
        <div class="timeline-body">{{ exp.details | markdown | safe }}</div>
      </div>
      {% endfor %}
    </div>
  </section>
  {% endif %}

  {% if resume.skills %}
  <section>
    <h2>{{ resume.skills.title }}</h2>
    <ul class="print-skills">
      {% for skill in resume.skills.toolset %}
      <li>{{ skill.name }} — {{ skill.level }}</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% if resume.projects %}
  <section>
    <h2>{{ resume.projects.title }}</h2>
    <ul>
      {% for project in resume.projects.assignments %}
      <li><strong>{{ project.title }}</strong> — {{ project.tagline }}</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  {% if resume.education %}
  <section>
    <h2>{{ resume.education.title }}</h2>
    <ul>
      {% for edu in resume.education.info %}
      <li><strong>{{ edu.degree }}</strong>, {{ edu.university }} ({{ edu.time }})</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}
</div>
