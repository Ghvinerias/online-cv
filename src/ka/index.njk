---
layout: base.njk
pageClass: home
lang: ka
---
{% set resume = resume_ka %}
{% set langSwitchUrl = "/" %}

<header class="hero">
  <div class="container hero-grid">
    <div class="hero-main">
      <div class="eyebrow">{{ resume.sidebar.tagline }}</div>
      <h1 class="hero-title">{{ resume.sidebar.name }}</h1>
      <p class="hero-subtitle">{{ resume["career-profile"].summary | striptags }}</p>
      <div class="hero-actions">
        <a class="btn primary" href="{{ resume.sidebar.pdf }}" target="_blank" rel="noopener">PDF ჩამოტვირთვა</a>
      </div>
    </div>
    <div class="hero-card">
      {% if resume.sidebar.avatar %}
      <img class="avatar" src="/assets/images/{{ resume.sidebar.avatar }}" alt="{{ resume.sidebar.name }}" />
      {% endif %}
      <div class="contact">
        {% include "sections/contact.njk" %}
      </div>
    </div>
  </div>
  <div class="lang-switch">
    <a class="pill link" href="/">EN</a>
    <span class="pill">KA</span>
  </div>
</header>

<main class="container main-grid">
  <section class="panel">
    {% include "sections/experience.njk" %}
  </section>

  <aside class="sidebar">
    {% include "sections/skills.njk" %}
    {% include "sections/languages.njk" %}
    {% include "sections/interests.njk" %}
    {% include "sections/education.njk" %}
    {% include "sections/projects.njk" %}
  </aside>
</main>

<footer class="container footer">
  <span>{{ resume.footer }}</span>
</footer>
